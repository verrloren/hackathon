generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
    url      = env("DATABASE_URL")
	directUrl = env("DIRECT_URL")
}

enum UserRole {
	ADMIN
	USER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
	password			String?
	role 			    UserRole @default(USER)
	notifications Notification[]
  hotels        Hotel[]
}

model Notification {
	id 						String @id @default(cuid())
	user 					User @relation(fields: [userId], references: [id])
	userId 				String
	message 			String
	createdAt 		DateTime @default(now())
	// Hotels 				Hotel[] @relation(references: [hotel_id])
}

model Hotel {
	index										String @id @default(cuid())
	hotel_id								String
	hotel_name							String
	room_name 							String
	price										Float
	meal										String?
	yandex_name							String?
	yandex_price						Float?
	price_diff							Float?
	percentage_price_diff 	Float?
	checkin									Float?
	checkout								Float?

	createdAt               DateTime @default(now())

  userId        String
  user          User @relation(fields: [userId], references: [id])
}